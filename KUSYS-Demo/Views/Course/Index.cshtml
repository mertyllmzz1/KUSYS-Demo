<h3>
    Kurslar
</h3>
<a href="/Course/Insert" style="margin-top:25px;margin-bottom:25px;" class="btn btn-primary">Yeni Kurs</a>
<table class="table table-bordered" style="padding-top:2%;">
    <thead>
        <tr>
            <td>#</td>
            <td>Kurs No</td>
            <td>Kurs Adı</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr ondblclick="ShowStudentDetailsModal()">
                <td>@item.Id</td>
                <td>@item.CourseId</td>
                <td>@item.CourseName</td>
                <td>
                    <a class="btn btn-warning" href="/Course/Update/@item.Id">Güncelle</a>
                    <a class="btn btn-danger" href="/Course/Delete/@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>